<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="auv">
  <!-- var -->
  <xacro:property name="cwd" value="/home/ubuntu/dev_ws/src/auv_description/model"/>
  <xacro:property name="PI" value="3.1415926535897931"/>
  <!-- incl -->
  <xacro:include filename="${cwd}/materials.xacro" />
  <xacro:include filename="${cwd}/inertial_macros.xacro" />
  <!-- base -->
  <link name="dummy">
  </link>
  <link name="base_link">
    <inertial>
        <mass value="1.14395"/>
        <inertia ixx="0.095329" ixy="0" ixz="0" iyy="0.381317" iyz="0" izz="0.476646"/>
    </inertial>
    <visual>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </collision>
  </link>
  <joint name="dummy_joint" type="fixed">
     <parent link="dummy"/>
     <child link="base_link"/>
  </joint>
  <gazebo reference='base_link'>
    <xacro:red/>
  </gazebo>

  <!-- driving wheels -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}_link">
      <inertial>
        <mass value="1"/>
        <inertia ixx="0.043333" ixy="0" ixz="0" iyy="0.043333" iyz="0" izz="0.08"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder radius="0.4" length="0.2"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.4" length="0.2"/>
        </geometry>
      </collision>
    </link>
    <joint name="${name}_joint" type="continuous">
      <origin xyz="${x} ${y} 0.0" rpy="1.5707 0.0 0.0"/>
      <parent link="base_link"/>
      <child link="${name}_link"/>
      <axis xyz="0.0 0.0 1.0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel name="fl" x="0.5" y="-0.6"/>
  <xacro:wheel name="fr" x="0.5" y="0.6"/>

  <!-- caster -->
  <link name="caster_link">
    <xacro:inertial_sphere mass="0.1" radius="0.2">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
  </link>
  <joint name="caster_joint" type="fixed">
    <origin xyz="-0.8 0 -0.2" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="caster_link"/>
  </joint>
  <!-- plugins -->
  <gazebo>
    <plugin
      filename="ignition-gazebo-diff-drive-system"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>fl_joint</left_joint>
      <right_joint>fr_joint</right_joint>
      <wheel_separation>1</wheel_separation>
      <wheel_radius>0.4</wheel_radius>
      <odom_publish_frequency>1</odom_publish_frequency>
      <topic>cmd_vel</topic>
    </plugin>
  </gazebo>
  <gazebo reference="base_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>1</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
    </sensor>
  </gazebo>
</robot>
