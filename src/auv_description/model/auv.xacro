<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="auv">
  <!-- settings -->
  <xacro:property name="imuHz" value="50.0"/> 
  <!-- var -->
  <xacro:property name="cwd" value="/home/ubuntu/dev_ws/src/auv_description/model"/>
  <xacro:property name="pi" value="3.1415926535897931"/>
  <xacro:property name="dummy_link_name" value="dummy_link"/>
  <!-- incl -->
  <xacro:include filename="${cwd}/materials.xacro" />
  <xacro:include filename="${cwd}/inertial_macros.xacro" />
  <!-- base -->
  <link name="${dummy_link_name}">
  </link>
  <link name="base_link">
    <xacro:inertial_box mass="6" x="2.0" y="1.0" z="0.5">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
    <visual>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </collision>
  </link>
  <joint name="dummy_joint" type="fixed">
     <parent link="${dummy_link_name}"/>
     <child link="base_link"/>
  </joint>
  <gazebo reference='base_link'>
    <xacro:red/>
  </gazebo>

  <!-- wheels -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}_link">
      <xacro:inertial_cylinder mass="1" radius="0.4" length="0.2">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
      <visual>
        <geometry>
          <cylinder radius="0.4" length="0.2"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.4" length="0.2"/>
        </geometry>
      </collision>
    </link>
    <joint name="${name}_joint" type="continuous">
      <origin xyz="${x} ${y} 0.0" rpy="1.5707 0.0 0.0"/>
      <parent link="base_link"/>
      <child link="${name}_link"/>
      <axis xyz="0.0 0.0 1.0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel name="fl" x="0.5" y="-0.6"/>
  <xacro:wheel name="fr" x="0.5" y="0.6"/>
  <!-- <xacro:wheel name="bl" x="-0.5" y="-0.6"/>
  <xacro:wheel name="br" x="-0.5" y="0.6"/> -->

  <!-- caster -->
  <link name="caster_link">
    <xacro:inertial_sphere mass="0.000000000000000000001" radius="0.2">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
  </link>
  <joint name="caster_joint" type="fixed">
    <origin xyz="-0.8 0 -0.2" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="caster_link"/>
  </joint>
  <!-- plugins -->
  <gazebo>
    <plugin
      filename="ignition-gazebo-diff-drive-system"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>fl_joint</left_joint>
      <!-- <left_joint>bl_joint</left_joint> -->
      <right_joint>fr_joint</right_joint>
      <!-- <right_joint>br_joint</right_joint> -->
      <wheel_separation>1</wheel_separation>
      <wheel_radius>0.4</wheel_radius>
      <odom_publish_frequency>${imuHz}</odom_publish_frequency>
      <topic>cmd_vel</topic>
    </plugin>
    <plugin filename="ignition-gazebo-pose-publisher-system" name="ignition::gazebo::systems::PosePublisher">
      <publish_link_pose>false</publish_link_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <publish_sensor_pose>false</publish_sensor_pose>
      <publish_nested_model_pose>true</publish_nested_model_pose>
      <update_frequency>20</update_frequency>
      <use_pose_vector_msg>false</use_pose_vector_msg>
    </plugin>
  </gazebo>

 
  <!-- sensors -->
  <gazebo reference="base_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>${imuHz}</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
      <angular_velocity>
        <x><noise type="none"/></x>
        <y><noise type="none"/></y>
        <z><noise type="none"/></z>
      </angular_velocity>
      <linear_acceleration>
        <x><noise type="none"/></x>
        <y><noise type="none"/></y>
        <z><noise type="none"/></z>
      </linear_acceleration>
    </sensor>
  </gazebo>
</robot>
