<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="test">
  <!-- var -->
  <xacro:property name="cwd" value="/home/ubuntu/urdf"/>
  <xacro:property name="PI" value="3.1415926535897931"/>
  <!-- incl -->
  <xacro:include filename="${cwd}/materials.xacro" />
  <!-- base -->
  <link name="base_link">
    <inertial>
        <mass value="1.14395"/>
        <inertia ixx="0.095329" ixy="0" ixz="0" iyy="0.381317" iyz="0" izz="0.476646"/>
    </inertial>
    <visual>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference='base_link'>
    <xacro:red/>
  </gazebo>

  <!-- driving wheels -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}_link">
      <inertial>
        <mass value="1"/>
        <inertia ixx="0.043333" ixy="0" ixz="0" iyy="0.043333" iyz="0" izz="0.08"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder radius="0.4" length="0.2"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.4" length="0.2"/>
        </geometry>
      </collision>
    </link>
    <joint name="${name}_joint" type="continuous">
      <origin xyz="${x} ${y} 0.0" rpy="1.5707 0.0 0.0"/>
      <parent link="base_link"/>
      <child link="${name}_link"/>
      <axis xyz="0.0 0.0 1.0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel name="fl" x="0.5" y="-0.6"/>
  <xacro:wheel name="fr" x="0.5" y="0.6"/>

  <!-- caster -->
  <gazebo>
    <frame name="caster_frame" attached_to='base_link'>
      <pose>-0.8 0 -0.2 0 0 0</pose>
    </frame>
    <link name='caster_link'>
      <pose relative_to='caster_frame'/>
      <inertial>
          <mass>1</mass>
          <inertia>
              <ixx>0.016</ixx>
              <ixy>0</ixy>
              <ixz>0</ixz>
              <iyy>0.016</iyy>
              <iyz>0</iyz>
              <izz>0.016</izz>
          </inertia>
      </inertial>
      <visual name="visual">
          <geometry>
              <sphere>
                  <radius>0.2</radius>
              </sphere>
          </geometry>
          <material>
              <ambient>0.0 1 0.0 1</ambient>
              <diffuse>0.0 1 0.0 1</diffuse>
              <specular>0.0 1 0.0 1</specular>
          </material>
      </visual>
      <collision name="collision">
          <geometry>
              <sphere>
                  <radius>0.2</radius>
              </sphere>
          </geometry>
      </collision>
    </link>
    <joint name='caster_joint' type='ball'>
      <parent>base_link</parent>
      <child>caster_link</child>
    </joint>
  </gazebo>

  <!-- plugins -->
  <gazebo>
    <plugin
      filename="ignition-gazebo-diff-drive-system"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>fl_joint</left_joint>
      <right_joint>fr_joint</right_joint>
      <wheel_separation>1</wheel_separation>
      <wheel_radius>0.4</wheel_radius>
      <odom_publish_frequency>1</odom_publish_frequency>
      <topic>cmd_vel</topic>
    </plugin>
  </gazebo>
  <gazebo reference="base_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>1</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
    </sensor>
  </gazebo>
</robot>
